<Window x:Class="CAlculator_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAlculator_"
        mc:Ignorable="d"
        Title="MainWindow" Icon="/Images/images-_1_.ico" Height="525" Width="335">
    <Grid Background="#FF2D2D2D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#FF2D2D2D" 
                Padding="10">
            <StackPanel VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right">
                <TextBlock x:Name="HistoryText" 
                           Foreground="#FFA5A5A5" 
                           FontSize="16" 
                           HorizontalAlignment="Right" 
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="DisplayText" 
                           Foreground="White" 
                           FontSize="36" 
                           HorizontalAlignment="Right" 
                           Text="0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" 
                    Margin="5">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnClear" 
                        Content="C" 
                        Style="{StaticResource LightGrayButton}" 
                        Click="OnClearClick"/>
                
                <Button x:Name="BtnPlusMinus" 
                        Content="±" 
                        Style="{StaticResource LightGrayButton}" 
                        Click="OnPlusMinusClick"/>
                <Button x:Name="BtnBackspace" 
                        Content="⌫" 
                        Style="{StaticResource LightGrayButton}" 
                        Click="OnBackspaceClick"/> 
                <Button x:Name="BtnDivide" 
                        Content="÷" 
                        Style="{StaticResource OrangeButton}" 
                        Click="OnOperatorClick"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="Btn7" 
                        Content="7" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="Btn8" 
                        Content="8" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="Btn9" 
                        Content="9" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="BtnMultiply" 
                        Content="×" 
                        Style="{StaticResource OrangeButton}" 
                        Click="OnOperatorClick"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="Btn4" 
                        Content="4" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="Btn5" 
                        Content="5" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="Btn6" 
                        Content="6" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="BtnSubtract" 
                        Content="-" 
                        Style="{StaticResource OrangeButton}" 
                        Click="OnOperatorClick"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="Btn1" 
                        Content="1" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="Btn2" 
                        Content="2" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="Btn3" 
                        Content="3" 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="BtnAdd" 
                        Content="+" 
                        Style="{StaticResource OrangeButton}" 
                        Click="OnOperatorClick"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="Btn0" 
                        Content="0" 
                        Style="{StaticResource WideDarkGrayButton}" 
                        Click="OnNumberClick"/>
                <Button x:Name="BtnDecimal" 
                        Content="," 
                        Style="{StaticResource DarkGrayButton}" 
                        Click="OnDecimalClick"/>
                <Button x:Name="BtnEquals" 
                        Content="=" 
                        Style="{StaticResource OrangeButton}" 
                        Click="OnEqualsClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
