<Application x:Class="CAlculator_.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CAlculator_"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="DarkGrayButton" TargetType="Button">
            <Setter Property="Background" Value="#FF505050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6A6A6A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF7A7A7A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LightGrayButton" TargetType="Button">
            <Setter Property="Background" Value="#FFD4D4D2"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE4E4E2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFF4F4F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFF9500"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFB143"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFFFC875"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WideDarkGrayButton" TargetType="Button" BasedOn="{StaticResource DarkGrayButton}">
            <Setter Property="Width" Value="148"/>
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFF3333"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </Application.Resources>
</Application>
